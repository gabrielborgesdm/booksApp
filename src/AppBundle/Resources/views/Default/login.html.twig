<body>
	<div id="container" class="cls-container">

		<!-- BACKGROUND IMAGE -->
		<!--===================================================-->
		<div id="bg-overlay"></div>

		<!-- LOGIN FORM -->
		<!--===================================================-->
		<div class="cls-content">
		    <div class="cls-content-sm panel">
		        <div class="panel-body">

					<div class="mar-ver pad-btm text-center" style="padding-bottom: 0">
		            	<img src="/assets/img/logo-wab.png" style="width: 300px;max-width:100%"/>
		                <h1 class="h3">Login</h1>
						<div class="">
						{% if error %}
    						{{ error.messageKey }}
						{% endif %}
						&nbsp;
						</div>
		            </div>
		            <form action="{{path('login')}}" method="post">
		                <div class="form-group">
		                    <input type="text" name="_username" class="form-control" placeholder="Usuário" required="required" autofocus>
		                </div>
		                <div class="form-group">
		                    <input type="password" name="_password" class="form-control" required="required" placeholder="Senha">
		                </div>
		                <button class="btn btn-primary btn-lg btn-block" type="submit">Entrar</button>
		            </form>
		        </div>

		        <div class="pad-all">
		            <a href="{{path('security_password_index')}}" class="btn-link mar-rgt">Esqueceu a senha?</a>
		        </div>
		    </div>
		</div>
		<!--===================================================-->

	</div>
